extends ../base

block content
  h4 Update Video
  form(method="POST")
    input(
      name="title",
      type="text",
      placeholder="Video Title",
      value=video.title,
      maxlength=80,
      required
    )
    input(
      name="description",
      type="text",
      placeholder="Description",
      value=video.description,
      minlength=2,
      required
    )
    input(
      name="hashtags",
      type="text",
      placeholder="Hashtags, separated by comma.",
      value=video.hashtags.join(),
      required
    )
    input(value="Save", type="submit")
